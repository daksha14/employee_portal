<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5 shadow">
        <div class="card-body">
          <h2>Listing All User</h2>
           <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Email</th>
                <th>Name</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to 'Edit', edit_admin_user_path(user) ,class: "btn btn-warning" %></td>
                  <td><%= link_to 'destroy', {:controller => "admin/users", :action => "destroy", :id => user.id}, method: :delete , class: "btn btn-primary"%></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= link_to 'New User', new_admin_user_path %>
        </div>
      </div>
    </div>
  </div>
</div>