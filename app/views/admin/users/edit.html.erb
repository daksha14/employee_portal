<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5 shadow">
        <div class="card-body">
          <h2>Update User</h2>
          <%= form_for @user, url: "/admin/users/#{@user.id}" do |f| %>

            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, class: "form-control" %><br />
            </div>

            <div class="actions">
            <%= f.submit "Update User",class: "btn btn-lg btn-primary btn-block" %><br />
          </div>
          <% end %>
          <%= link_to 'Back', admin_user_path %>
        </div>
      </div>
    </div>
  </div>
</div>